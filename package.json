{
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "patch-package",
    "dev:happy-css-modules": "npm -w example run hcm",
    "dev:stylelint-happy-css-modules": "npm -w stylelint-happy-css-modules run build && npm -w example run lint",
    "build": "npm run build --workspaces --if-present",
    "lint": "run-s -c lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint .",
    "lint:tsc": "tsc -p tsconfig.json",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules $NODE_OPTIONS\" jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mizdra/happy-css-modules.git"
  },
  "author": "mizdra",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "npm@9.6.4",
  "prettier": "@mizdra/prettier-config-mizdra",
  "workspaces": [
    "packages/happy-css-modules",
    "packages/stylelint-happy-css-modules",
    "packages/example"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^2.0.3",
    "@eslint/js": "^8.37.0",
    "@jest/globals": "^29.0.3",
    "@jest/types": "^29.0.3",
    "@mizdra/eslint-config-mizdra": "^1.2.0",
    "@mizdra/prettier-config-mizdra": "^1.0.0",
    "@swc/core": "^1.3.44",
    "@swc/jest": "^0.2.24",
    "@types/dedent": "^0.7.1",
    "@types/eslint": "^8.37.0",
    "@types/glob": "^7.2.0",
    "@types/jest": "^29.0.0",
    "@types/less": "^3.0.4",
    "@types/line-column": "^1.0.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.0.6",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@typescript/server-harness": "^0.2.0",
    "dedent": "^0.7.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.0.3",
    "less": "^4.1.3",
    "line-column": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.5.1",
    "postcss-import": "^15.1.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "~2.7.1",
    "sass": "^1.63.4",
    "stylelint": "^15.4.0",
    "tsc-watch": "^5.0.3",
    "typescript": "^5.0.3"
  }
}
