{
  "name": "happy-css-modules",
  "version": "1.0.0",
  "description": "Creates .d.ts files from CSS Modules .css files",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.src.json",
    "dev": "tsc-watch -p tsconfig.src.json --noClear --onSuccess 'pnpm run --dir example hcm'",
    "lint": "run-s -c lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:tsc": "run-s -c lint:tsc:*",
    "lint:tsc:src": "tsc -p tsconfig.src.json --noEmit",
    "lint:tsc:config": "tsc -p tsconfig.config.json --noEmit",
    "lint:tsc:example": "tsc -p tsconfig.example.json --noEmit",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules $NODE_OPTIONS\" jest"
  },
  "bin": {
    "hcm": "bin/hcm.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mizdra/happy-css-modules.git"
  },
  "keywords": [
    "css-modules",
    "typescript"
  ],
  "files": [
    "bin",
    "src",
    "dist"
  ],
  "author": "mizdra",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@file-cache/core": "^1.1.3",
    "@file-cache/npm": "^1.1.3",
    "await-lock": "^2.2.2",
    "camelcase": "^7.0.0",
    "chalk": "^5.0.1",
    "chokidar": "^3.5.3",
    "enhanced-resolve": "^5.10.0",
    "glob": "^8.0.3",
    "import-meta-resolve": "^2.1.0",
    "minimatch": "^5.1.0",
    "postcss": "^8.4.18",
    "postcss-load-config": "^4.0.1",
    "postcss-modules": "^4.3.1",
    "postcss-selector-parser": "^6.0.10",
    "postcss-value-parser": "^4.2.0",
    "source-map": "^0.7.4",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.0.3",
    "@jest/types": "^29.0.3",
    "@mizdra/eslint-config-mizdra": "^1.2.0",
    "@mizdra/prettier-config-mizdra": "^1.0.0",
    "@swc/core": "^1.3.21",
    "@swc/jest": "^0.2.23",
    "@types/dedent": "^0.7.0",
    "@types/glob": "^7.2.0",
    "@types/jest": "^29.0.0",
    "@types/less": "^3.0.3",
    "@types/line-column": "^1.0.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^18.0.6",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@typescript/server-harness": "^0.2.0",
    "dedent": "^0.7.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.0.3",
    "less": "^4.1.3",
    "line-column": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^15.0.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "~2.7.1",
    "sass": "^1.54.3",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "less": "^3.0.0 || ^4.0.0",
    "postcss": "^8.0.0",
    "sass": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "sass": {
      "optional": true
    },
    "less": {
      "optional": true
    }
  },
  "packageManager": "pnpm@7.9.5",
  "prettier": "@mizdra/prettier-config-mizdra",
  "pnpm": {
    "patchedDependencies": {
      "postcss-load-config@4.0.1": "patches/postcss-load-config@4.0.1.patch"
    }
  }
}
