{
  "name": "enhanced-typed-css-modules",
  "version": "0.7.0",
  "description": "Creates .d.ts files from CSS Modules .css files",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.src.json",
    "dev": "tsc-watch -p tsconfig.src.json --noClear --onSuccess 'pnpm run --dir example etcm'",
    "lint": "run-s -c lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:tsc": "run-s -c lint:tsc:*",
    "lint:tsc:src": "tsc -p tsconfig.src.json --noEmit",
    "lint:tsc:test": "tsc -p tsconfig.test.json --noEmit",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules $NODE_OPTIONS\" jest"
  },
  "bin": {
    "etcm": "bin/etcm.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mizdra/enhanced-typed-css-modules.git"
  },
  "keywords": [
    "css-modules",
    "typescript"
  ],
  "files": [
    "bin",
    "src",
    "dist"
  ],
  "author": "mizdra",
  "license": "MIT",
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "dependencies": {
    "camelcase": "^7.0.0",
    "chalk": "^5.0.1",
    "chokidar": "^3.5.3",
    "es-aggregate-error": "^1.0.8",
    "glob": "^8.0.3",
    "postcss": "^8.4.14",
    "postcss-modules": "^4.3.1",
    "postcss-selector-parser": "^6.0.10",
    "postcss-value-parser": "^4.2.0",
    "source-map": "^0.7.4",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^28.1.3",
    "@mizdra/eslint-config-mizdra": "^1.2.0",
    "@mizdra/prettier-config-mizdra": "^1.0.0",
    "@types/dedent": "^0.7.0",
    "@types/es-aggregate-error": "^1.0.2",
    "@types/glob": "^7.2.0",
    "@types/jest": "^28.1.8",
    "@types/less": "^3.0.3",
    "@types/node": "^18.0.6",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "babel-jest": "^28.1.3",
    "dedent": "^0.7.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.3",
    "less": "^4.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.7.1",
    "sass": "^1.54.3",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "postcss": "^8.0.0",
    "sass": "^1.0.0",
    "less": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "sass": {
      "optional": true
    },
    "less": {
      "optional": true
    }
  },
  "packageManager": "pnpm@7.9.5",
  "prettier": "@mizdra/prettier-config-mizdra"
}
