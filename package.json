{
  "name": "checkable-css-modules",
  "version": "0.7.0",
  "description": "Creates .d.ts files from CSS Modules .css files",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "run-s -c lint:*",
    "lint:prettier": "eslint .",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit",
    "test": "jest"
  },
  "bin": {
    "tcm": "lib/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mizdra/checkable-css-modules.git"
  },
  "keywords": [
    "css-modules",
    "typescript"
  ],
  "author": "mizdra",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "@types/convert-source-map": "^1.5.2",
    "@types/css-modules-loader-core": "^1.1.0",
    "camelcase": "^6.0.0",
    "chalk": "^4.0.0",
    "chokidar": "^3.4.0",
    "convert-source-map": "^1.8.0",
    "css-modules-loader-core": "^1.1.0",
    "glob": "^7.2.3",
    "is-there": "^4.4.2",
    "mkdirp": "^1.0.0",
    "postcss-selector-parser": "^6.0.9",
    "source-map": "^0.7.3",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@mizdra/eslint-config-mizdra": "^1.2.0",
    "@mizdra/prettier-config-mizdra": "^1.0.0",
    "@types/glob": "7.2.0",
    "@types/jest": "^28.1.1",
    "@types/mkdirp": "1.0.2",
    "@types/node": "^17.0.42",
    "@types/yargs": "15.0.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.39",
    "prettier": "2.4.1",
    "ts-jest": "^28.0.4",
    "typescript": "4.4.3"
  },
  "peerDependencies": {
    "postcss": "^7.0.0"
  },
  "packageManager": "pnpm@7.2.1",
  "prettier": "@mizdra/prettier-config-mizdra",
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(test/.*|(src/.*\\.test))\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.ts$",
      "lib/",
      "example/",
      "coverage/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ]
  }
}
