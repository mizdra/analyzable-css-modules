{
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests.v2",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": [
        "run",
        "test",
        "--",
        "--runInBand",
        "--watchAll=false",
        "--testTimeout=300000",
        "--testNamePattern",
        "${jest.testNamePattern}",
        "--runTestsByPath",
        "${jest.testFile}"
      ]
    },
    {
      "name": "dev:stylelint-happy-css-modules",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:stylelint-happy-css-modules"]
    },
    {
      "name": "Run vscode-happy-css-modules",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-happy-css-modules"],
      "outFiles": [
        "${workspaceFolder}/packages/vscode-happy-css-modules/dist/**/*.cjs",
        "${workspaceFolder}/packages/vscode-happy-css-modules/dist/**/*.js"
      ]
    }
  ]
}
